<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2D9D8"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/firstRelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/txtFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="First Name"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/txtFName"
            android:hint="First Name" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondRelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstRelLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txtLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Last Name"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/LName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/txtLName"
            android:hint="Last Name" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thirdRelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondRelLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Marks"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/marks"
            android:hint="Marks" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fourthRelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdRelLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="Give ID to delete"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/id"
            android:hint="id" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnRlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthRelLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/addButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Add"
            android:textColor="#333131"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ViewButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/addButton"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="View"
            android:textColor="#333131"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/UpdateButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/addButton"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Update"
            android:textColor="#333131"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/DeleteButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/ViewButton"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/UpdateButton"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Delete"
            android:textColor="#333131"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>